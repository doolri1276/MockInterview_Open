<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/bg_main_gradient"
        android:layout_height="match_parent"
        tools:context=".activities.signinup.UserActivity">

    <include layout="@layout/custom_appbar"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_below="@id/rl_appbar_root"
                  android:layout_above="@id/ll_btm"
                  android:orientation="vertical"

                  android:gravity="center"
                  android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:text="\@sushiboi123"
                style="@style/NormalWhite_Bold_28sp"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_winner"
                android:adjustViewBounds="true"
                android:layout_marginTop="25dp"
                android:maxHeight="200dp"
                android:layout_height="200dp"/>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_btm"
            android:layout_width="match_parent"
            android:background="@drawable/half_round_white_bg"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="21dp"
            android:paddingRight="21dp"
            android:paddingBottom="30dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/ll_psw"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="16dp"
                    android:src="@drawable/ic_psw"
                    android:layout_marginLeft="10dp"
                    android:layout_height="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="Change Password"
                    style="@style/NormalBlack_Regular_18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/ll_reset"
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="16dp"
                    android:src="@drawable/ic_reset"
                    android:layout_marginLeft="10dp"
                    android:layout_height="16dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:text="Reset Data"
                    style="@style/NormalBlack_Regular_18sp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:background="@drawable/semi_round_branding"
                android:text="Logout"
                android:layout_marginTop="10dp"
                style="@style/NormalWhite_Bold_14sp"
                android:gravity="center"
                android:layout_height="46dp"/>

    </LinearLayout>

</RelativeLayout>