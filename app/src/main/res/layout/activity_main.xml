<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_gradient"
        tools:context=".activities.MainActivity">

    <include layout="@layout/custom_appbar"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_appbar_root"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="21dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="20dp"
                    android:text="Featured"
                    style="@style/NormalWhite_Bold_32sp"
                    android:layout_marginLeft="21dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="46dp"
                    android:paddingRight="21dp"
                    android:paddingLeft="21dp"
                    android:background="@drawable/half_round_white_bg">

                <LinearLayout
                        android:id="@+id/ll_item1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/bg_main_item1"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorMainItem"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_height="31dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="interview simulation"
                                style="@style/NormalWhite_Bold_14sp"
                                android:layout_weight="1"
                                android:textAllCaps="true"/>

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_right_arrow"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_item2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/bg_main_item2"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorMainItem"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_height="31dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="answer to questions"
                                style="@style/NormalWhite_Bold_14sp"
                                android:layout_weight="1"
                                android:textAllCaps="true"/>

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_right_arrow"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/ll_item3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:orientation="vertical">
                    <ImageView
                            android:layout_width="match_parent"
                            android:src="@drawable/bg_main_item3"
                            android:adjustViewBounds="true"
                            android:layout_height="wrap_content"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:background="@color/colorMainItem"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:gravity="center_vertical"
                            android:layout_height="31dp">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Interview Success Tips"
                                style="@style/NormalWhite_Bold_14sp"
                                android:layout_weight="1"
                                android:textAllCaps="true"/>

                        <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_right_arrow"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>