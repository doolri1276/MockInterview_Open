<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/ac_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_signin"
        tools:context=".activities.signinup.SignInActivity">



    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fillViewport="true"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:paddingRight="24dp"
                      android:paddingLeft="24dp"
                      android:gravity="center_vertical"
                      android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="35dp"
                    android:layout_gravity="center"
                    android:background="@drawable/logo"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/semi_round_border_branding_2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                <ImageView android:layout_width="16dp"
                           android:layout_height="16dp"
                           android:layout_marginLeft="24dp"
                           android:src="@drawable/ic_person"/>

                <EditText
                        android:id="@+id/et_cpw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@color/colorTransparent"
                        style="@style/NormalBlack_Regular_14sp"
                        android:inputType="textEmailAddress"
                        android:hint="Email"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_war_cpw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please enter a valid email address."
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    style="@style/Alert_Regular_12sp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/semi_round_border_branding_2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">


                <ImageView android:layout_width="16dp"
                           android:layout_height="16dp"
                           android:layout_marginLeft="24dp"
                           android:src="@drawable/ic_psw"/>

                <EditText
                        android:id="@+id/et_psw"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:maxLines="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        android:background="@color/colorTransparent"
                        style="@style/NormalBlack_Regular_14sp"
                        android:inputType="textPassword"
                        android:hint="Password"/>

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_war_psw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your username and/or password do not match."
                    android:visibility="invisible"
                    tools:visibility="visible"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp"
                    style="@style/Alert_Regular_12sp"/>

            <TextView
                    android:id="@+id/tv_signin"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center"
                    style="@style/NormalWhite_Regular_14sp"
                    android:padding="5dp"
                    android:enabled="true"
                    android:background="@drawable/sel_semi_round_branding_btn"
                    android:layout_marginTop="22dp"
                    android:text="Login"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:paddingLeft="12dp"
                          style="@style/NormalGray_Regular_12sp"
                          android:text="Don't have an account?"/>
                <TextView
                        android:id="@+id/tv_signup"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="12dp"
                        android:background="@color/colorWhite"
                        style="@style/PrimaryLight_Bold_12sp"
                        android:text=" Register"/>
            </LinearLayout>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</RelativeLayout>