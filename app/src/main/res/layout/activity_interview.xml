<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_main_gradient"
        tools:context=".activities.mockinterview.InterviewActivity">

    <include layout="@layout/custom_appbar"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_appbar_root"
            android:fillViewport="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="21dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="Get Ready"
                        android:layout_weight="1"
                        style="@style/NormalWhite_Bold_28sp"
                        android:layout_marginLeft="21dp"/>
                <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="21dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="20dp"
                        android:text="0:30"
                        style="@style/NormalWhite_Bold_28sp"
                        android:layout_marginLeft="21dp"/>
            </LinearLayout>



            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="46dp"
                    android:paddingRight="21dp"
                    android:paddingLeft="21dp"
                    android:background="@drawable/half_round_white_bg">

                <FrameLayout
                        android:id="@+id/fl_fragment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>


<!--                fragment-->


            </RelativeLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>