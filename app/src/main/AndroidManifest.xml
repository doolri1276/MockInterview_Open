<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.ub_hackers.mockinterview">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:name=".tools.App"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:requestLegacyExternalStorage="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".activities.signinup.UserActivity">
        </activity>
        <activity
                android:name=".activities.other.AnswersActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activities.other.TipsActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activities.mockinterview.InterviewActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activities.mockinterview.InterviewMainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activities.signinup.SignUpActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name=".activities.signinup.SignInActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name=".activities.signinup.ChangePasswordActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize">
        </activity>
        <activity
                android:name=".activities.MainActivity"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name=".activities.SplashActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>